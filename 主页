		<script>
			$(document).ready(function() {
				$(".carousel").carousel(); // 初始化轮播图组件
			});

			function logout() {
				window.location.href = "登录页.html";
			}

			function yanzheng() {
				var na = document.getElementById("email").value; // 获取输入框中的值
				var mm = document.getElementById("pwd").value; // 获取输入框中的值
				if (mm == "" || na == "") { // 修改此处，使用相等操作符 == 来比较值
					alert("输入框不能为空");
				} else if (mm === na) { // 修改此处，使用相等操作符 == 来比较值，添加 else if 语句
					window.location.href = "登录页.html"; // 重定向到指定页面
				} else {
					alert("两次输入的密码不一致，请重新输入!");
				}
			}
		</script>
